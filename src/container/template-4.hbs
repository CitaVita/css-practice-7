
   
    <header class="page_block">
        <div class="header">   
           {{> logo}}
                <div class="header_nav_right">   
                {{> nav list=header }}
                </div>  
        </div>
         {{> divider }}
    </header>  
{{#with main}}
<div class="main">
    <div >
        <img src="{{image}}" alt="Main image" class="main_image">
    </div>
    <div class="main_content">

    <h1 class="main_heading">{{heading}}</h1>
    <p class="main_description">{{description}}</p>
    <a href="{{href}}" class="button main_button">{{button}}</a>
    </div>
</div>
{{/with}}
<div class="featured">
    {{#each featured}}
<div class="card">
    <div class="card_photo" style="background: url({{{photo}}})"></div>
    <h2 class="card_heading">{{heading}}</h2>
    <p class="card_info">{{info}}</p>
    <a class="card_link" href="{{linkUrl}}">{{linkText}}</a>
</div>
    {{/each}}
</div>
<div class="card_actions">
{{#each actions}}
<div class="actions">
    <div class="actions_content">
    <h3 class="actions_heading">{{heading}}</h3>
    </div>
    <div class="col-3">
        <a href="{{url}}" class="actions_button">{{text}}</a>
    </div>
</div>
{{/each}}
</div>
    <footer class="page_block">
             {{> divider }}
                <div class="row  g-0 footer">
                    <div class="col-3">
                    {{> logo}}
                    <span class="footer_copyright">Copyright 2024</span>
                    </div>  
                {{#each footer}} 
                <div class="col-3">
                    <strong>
                    <span class="footer_title">{{title}}</span>
                    </strong>
                     {{> nav list=links isVertical=true }}
                </div>
                {{/each}}
                </div>
    </footer>      

